    <input type="text" id="inputField" placeholder="Ñ‡Ñ‚Ð¾ Ð±Ñ‹Ð»Ð¾ Ð² Ð¶Ð¾Ð¿Ðµ?">
    <button id="clickButton"></button>

    <script>
        const inputField = document.getElementById("inputField");
        const clickButton = document.getElementById("clickButton");
        const backgroundImage = document.getElementById("backgroundImage");
        let clickCount = 0;

        inputField.addEventListener("input", function() {
            const input = this.value.trim().toLowerCase();
            const correctWords = ["ÑƒÐ´Ð¾Ñ‡ÐºÑƒ", "ÑƒÐ´Ð¾Ñ‡ÐºÐ°"];

            if (correctWords.includes(input)) {
                backgroundImage.style.backgroundImage = "url('https://i.imgur.com/sYE1CLk.png')";
                backgroundImage.style.width = "400px";
                backgroundImage.style.height = "400px";

                document.title = "hint : 69"; 
                inputField.style.display = "none";
                clickButton.style.display = "block";
            }
        });

        clickButton.addEventListener("click", function() {
            clickButton.style.transform = "scale(0.95)";
            setTimeout(() => {
                clickButton.style.transform = "scale(1)";
            }, 100);

            clickCount++;

            if (clickCount >= 69) {
                backgroundImage.style.backgroundImage = "url('https://i.imgur.com/i7DZvPf.png')";
                backgroundImage.style.opacity = 0.4;
                clickButton.style.display = "none";
                clickCount = 0;
                document.title = "ÐºÐ¾Ð½ÐµÑ†"; 
                h1.style.color = "white";
            }
        });
    </script>
